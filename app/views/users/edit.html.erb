<h1>Editing User</h1>

<div class="row justify-content-center">
  <div class="col-6">
    <%= form_tag url_for(action: 'update'), method: "post" do %>
      <div class="form-group">
        <%= label_tag :first_name %>
        <%= text_field_tag 'first_name', @user.first_name, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag :last_name %>
        <%= text_area_tag 'last_name', @user.last_name, {class: 'form-control'} %>
      </div>
        <div class="form-group">
        <%= label_tag :email %>
        <%= text_area_tag "email", @user.email, {class: 'form-control'} %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= text_area_tag "password", @user.password, {class: 'form-control'} %>
      </div>
      <div class="row justify-content-center">
          <%= submit_tag "Create User", {class: 'btn btn-danger'} %>
          <%= link_to 'Back', users_path, {class: 'btn btn-secondary'}%>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Show', @user %> |
