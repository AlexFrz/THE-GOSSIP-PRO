<h1>New User</h1>
<!-- Display errors -->
<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>We could not create your account beause : </p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row justify-content-center">
  <div class="col-6">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-group">
        <%= label_tag :first_name %>
        <%= text_field_tag 'first_name', @user.first_name, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag :last_name %>
        <%= text_area_tag 'last_name', @user.last_name, {class: 'form-control'} %>
      </div>
        <div class="form-group">
        <%= label_tag :email %>
        <%= text_area_tag "email", @user.email, {class: 'form-control'} %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= text_area_tag "password", @user.password, {class: 'form-control'} %>
      </div>
      <div class="row justify-content-center">
          <%= submit_tag "Create User", {class: 'btn btn-danger'} %>
          <%= link_to 'Back', gossips_path, {class: 'btn btn-secondary'}%>
      </div>
    <% end %>
  </div>
</div>


