<div class="row justify-content-center">
  <div class="col-6">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
    
     <div class="form-group">
        <%= label_tag :email %>
        <%= text_area_tag "email", @user.email, {class: 'form-control'} %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= text_area_tag "password", @user.password, {class: 'form-control'} %>
      </div>
      <div class="row justify-content-center">
          <a href="<%= new_session_path %> class: 'btn btn-danger'} %>
          <%= link_to 'Back', gossips_path, {class: 'btn btn-secondary'}%>
      </div>
    <% end %>
  </div>
</div>