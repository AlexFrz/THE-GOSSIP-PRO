<h2 class="text-center my-5">Create a New Gossip !</h2>

<!-- Display errors -->
<% if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>We could not create this gossip beause : </p>
    <ul>
      <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row justify-content-center">
  <div class="col-6">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-group">
        <%= label_tag 'Title :' %>
        <%= text_field_tag 'title', @gossip.title, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag 'Content :' %>
        <%= text_area_tag 'content', @gossip.content, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag 'Auteur :' %>
        <%= text_area_tag "user", @gossip.user, {class: 'form-control'} %>
      </div>
      <div class="row justify-content-center">
          <%= submit_tag "CrÃ©er le potin", {class: 'btn btn-primary'} %>
      </div>
    <% end %>
  </div>
</div>
