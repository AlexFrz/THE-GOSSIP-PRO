<h2 class="text-center my-5">Edit a Gossip !</h2>

<div class="row justify-content-center">
  <div class="col-6">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-group">
        <%= label_tag 'Title :' %>
        <%= text_field_tag 'title', @gossip.title, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag 'Content :' %>
        <%= text_area_tag '#{@gossip.content}', @gossip.content, {class: 'form-control'} %>
      </div>

      <div class="row justify-content-center">
          <%= submit_tag "Modify", {class: 'btn btn-primary'} %>
      </div>
    <% end %>
  </div>
</div>